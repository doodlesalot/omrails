<div class="container">
	<p>
	  <strong>User:</strong>
	  <%= @want.user.username %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @want.title %>
	</p>

	<p>
	  <strong>Summary:</strong>
	  <%= @want.summary %>
	</p>

	<% if @want.fulldeets? %>
		<p>
		  <strong>Additional Details:</strong>
		  <%= @want.fulldeets %>
		</p>
	<% end %>

	<% if @want.user == current_user %>
	<%= link_to 'Edit', edit_want_path(@want) %> |
	<%= link_to 'Delete', @want, method: :delete %> |
	<% end %>
	<%= link_to 'Back', wants_path %>
</div>