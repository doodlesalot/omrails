<div class="container">
	<div class="row">
		<div class="offset-md-2 col-md-8">
			<div class="card">
			  <% if @tweet.image? %>
			  	<center><%= image_tag @tweet.image, class: 'card-img-top' %></center>
			  <% end %>
			  <div class="card-block">
			    <h4 class="card-title"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %></h4>
			    <p class="card-text"><%= @tweet.content %></p>
			    <div class="card-block">
				    <% if @tweet.user == current_user %>
			          <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_tweet_path(@tweet) %>
			          <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, @tweet, method: :delete, data: { confirm: 'Don\'t want it anymore?' } %>
			        <% end %>
				    <%= link_to 'Back', tweets_path, class: "card-link" %>
				</div>
			  </div>
			</div>
		</div>
	</div>
</div>