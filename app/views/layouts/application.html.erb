<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-default navbar-dark bg-inverse text-xs-center text-md-left">
      <div class="container">
        <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler hidden-lg-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
        <div class="collapse navbar-toggleable-md" id="navbarResponsive">
          <ul class="nav navbar-nav">
            <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Wants", wants_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", contact_us_path, class: "nav-link" %></li>
            <% if user_signed_in? %>
            <li class="nav-item float-xs-right"><%= link_to "Logout", signout_path, method: :delete, class: "nav-link" %></li>
            <% else %>
            <li class="nav-item float-xs-right btn btn-primary"><%= link_to "Sign Up", signup_path %></li>
            <li class="nav-item float-xs-right"><%= link_to "Sign In", signin_path, class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Alerts -->
    <% flash.each do |name, message| %>
    <%= content_tag(:div, message, class: "alert alert-info text-xs-center #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
